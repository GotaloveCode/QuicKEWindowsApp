        <Grid  Grid.Row="3" Grid.ColumnSpan="3" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" TextAlignment="Center"
                       Foreground="{StaticResource MyBlue}"
                   Style="{StaticResource BodyTextBlockStyle}"
                       VerticalAlignment="Center"
                   >Starred Rating: 
                </TextBlock>
            <Button Grid.Row="1">
                <StackPanel  Orientation="Horizontal">
                    <AppBarButton Foreground="{StaticResource MyBlue}"
                                  VerticalAlignment="Center">
                        <AppBarButton.Icon>
                            <BitmapIcon UriSource="Assets/img_user_profile.png"/>
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <TextBlock Foreground="{StaticResource MyOrange}"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center">View Activity Report</TextBlock>
                </StackPanel>
            </Button>

        </Grid>



